<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToggleBtnSwitchDemo"
    android:orientation="vertical"
    android:gravity="center">

    <ToggleButton
        android:id="@+id/wifi_tglbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Wifi Disabled"
        android:textOn="Wifi Enable"
        android:onClick="getValueFromToggleButton"/>

    <Switch
        android:id="@+id/wifi_stch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi"
        android:layout_marginTop="20dp"
        android:onClick="getValueFromSwitch"/>
</LinearLayout>